@model IEnumerable<eWallet.Models.Order>

@{
    ViewBag.Title = "My Completed Orders";
}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>My Completed Orders</h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                @using (@Html.BeginForm("Index", "MyOrders", new {Area= "Agents" }, FormMethod.Get, new { @class = "form-horizontal" }))
                {
                    <div class="input-group">
                        <span class="input-group-btn">
                            @Html.DropDownList("GrantId",null,"", new { @class = "form-control", onChange = "this.form.submit()" })
                        </span>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DateOrdered)
                            </th>
                            <th>
                                Product @Html.DisplayNameFor(model => model.Product.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UnitPrice)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateOrdered)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Product.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UnitPrice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles{
    @Styles.Render("~/Content/datatable")
}
@section Scripts {
    @Scripts.Render("~/vendors/datatable")
    <script>
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}