@model eWallet.Areas.Agents.Models.DashboardModel
@{
    ViewBag.Title = "Agent's Index";
}

<div class="row tile_count">
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-user"></i> My Grants</span>
        <div class="count blue">@Model.GrantCount</div>
    </div>
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-user"></i> My Pending Grants</span>
        <div class="count blue">@Model.PendingGrantCount</div>
    </div>
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-clock-o"></i> Grants Spent</span>
        <div class="count green">@Model.GrantSold</div>
    </div>
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-clock-o"></i> Pending Withdrawals</span>
        <div class="count green">@Model.PendingWithdrawal</div>
    </div>
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-user"></i> My Completed Orders</span>
        <div class="count">@Model.CompletedOrdersCount</div>
    </div>
</div>


<div class="row">

    <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="x_panel tile">
            <div class="x_title">
                <h2>Grants Summary</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <h4>Grants Available vs Spent</h4>
                @foreach (var grant in Model.ApprovedGrants)
                {
                    <div class="widget_summary">
                        <div class="w_left w_25">
                            <span>@grant.Grant.Title</span>
                        </div>
                        @{
                            var percentSpent = ((grant.Grant.MonetaryWorth - grant.Balance) / grant.Grant.MonetaryWorth) * 100;
                        }
                        <div class="w_center w_55">
                            <div class="progress">
                                <div class="progress-bar bg-green" role="progressbar" aria-valuenow="@percentSpent" aria-valuemin="0" aria-valuemax="100" style="width: @percentSpent%;">
                                    <span class="sr-only">@percentSpent% Complete</span>
                                </div>
                            </div>
                        </div>
                        <div class="w_right w_20">
                            <span>@grant.Grant.MonetaryWorth</span>
                        </div>
                        <div class="clearfix"></div>
                    </div>

                            }
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="x_panel tile">
            <div class="x_title">
                <h2>Pending Grants Summary</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <h4>Grants Available vs Spent</h4>
                @foreach (var grant in Model.PendingGrants)
                {
                    <div class="widget_summary">
                        <div class="w_left w_25">
                            <span>@grant.Grant.Title</span>
                        </div>
                        @{
                            var percentSpent = ((grant.Grant.MonetaryWorth - grant.Balance) / grant.Grant.MonetaryWorth) * 100;
                        }
                        <div class="w_center w_55">
                            <div class="progress">
                                <div class="progress-bar bg-green" role="progressbar" aria-valuenow="@percentSpent" aria-valuemin="0" aria-valuemax="100" style="width: @percentSpent%;">
                                    <span class="sr-only">@percentSpent% Complete</span>
                                </div>
                            </div>
                        </div>
                        <div class="w_right w_20">
                            <span>@grant.Grant.MonetaryWorth</span>
                        </div>
                        <div class="clearfix"></div>
                    </div>

                            }
            </div>
        </div>
    </div>
</div>
